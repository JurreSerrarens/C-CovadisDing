@page "/fetchdata"
@inject HttpClient Http
@using Covadis.Shared;
@using System.Text.Json

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Date.ToShortDateString()</td>
                    <td>@user.TemperatureC</td>
                    <td>@user.TemperatureF</td>
                    <td>@user.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public class ApiService
    {
        private readonly HttpClient _httpClient;
        private UserDto[]? users;


        public ApiService(HttpClient httpClient)
        {
            _httpClient = httpClient;
            users = await GetEmployeeAsync();
        }

        public async Task<UserDto> GetEmployeeAsync()
        {
            string baseUrl = "https://localhost:44333/";
            var response = await _httpClient.GetAsync($"{baseUrl}/users");
            response.EnsureSuccessStatusCode();
            var responseBody = await response.Content.ReadAsStringAsync();
            return JsonSerializer.Deserialize<UserDto>(responseBody);
        }
    }
}
